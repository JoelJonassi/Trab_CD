@model JobShopWeb.Models.ViewModel.SimulationVM
@{
    var title = "Create Machine";
    var title1 = "Create Operation";
    var title2 = "Create Simulation";
}

<form method="post" asp-action="Upsert" >

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Simulation.IdSimulation != 0)
        {
            <input type="hidden" asp-for="Simulation.IdSimulation" />
            title = "Edit Machine";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                   Machine Id
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Simulation.IdJob,
                   Model.JobList, "-Por favor Insira o Job-", new { @class = "form-control" })
                    <span asp-validation-for="Simulation.IdJob" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Simulation.NameSimulation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Simulation.NameSimulation" class="form-control" />
                    <span asp-validation-for="Simulation.NameSimulation" class="text-danger"></span>
                </div>
            </div>
 
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Simulation.IdSimulation != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
       
    </div>

</form>



