@model JobShopWeb.Models.Plan
@{
    var title = "Create Plan";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.IdJob != 0)
        {
            <input type="hidden" asp-for="IdPlan" />
            title = "Edit Plan";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IdSimulation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdSimulation" class="form-control" />
                    <span asp-validation-for="IdSimulation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IdJob"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdJob" class="form-control" />
                    <span asp-validation-for="IdJob" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IdOperation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdOperation" class="form-control" />
                    <span asp-validation-for="IdOperation" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IdMachine"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IdMachine" class="form-control" />
                    <span asp-validation-for="IdMachine" class="text-danger"></span>
                </div>
            </div>

             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="InitialTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="InitialTime" class="form-control" />
                    <span asp-validation-for="InitialTime" class="text-danger"></span>
                </div>
            </div>

             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FinalTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FinalTime" class="form-control" />
                    <span asp-validation-for="FinalTime" class="text-danger"></span>
                </div>
            </div>
            
           
            </div>
        </div>
    </div>

</form>
}

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}